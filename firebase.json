{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/maps/**",
        "destination": "/maps/index.html"
      },
      {
        "source": "/sounds/**",
        "destination": "/sounds/index.html"
      },
      {
        "source": "/materials/**",
        "destination": "/materials/index.html"
      },
      {
        "source": "/resource/**",
        "destination": "/resource/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
